            <Button fx:id="btnEditar" layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="64.0" prefWidth="108.0" style="-fx-background-radius: 10;" text="Editar" GridPane.rowIndex="1" />
            <Button fx:id="btnEliminar" layoutX="110.0" layoutY="13.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="64.0" prefWidth="108.0" style="-fx-background-radius: 10;" text="Eliminar" GridPane.rowIndex="2" />
