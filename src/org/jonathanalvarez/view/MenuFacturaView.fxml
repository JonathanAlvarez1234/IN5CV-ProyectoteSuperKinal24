      <TextField fx:id="tfFecha" layoutX="14.0" layoutY="469.0" prefHeight="35.0" prefWidth="201.0" />
      <Button fx:id="btnTotal" layoutX="655.0" layoutY="612.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="49.0" prefWidth="86.0" style="-fx-background-radius: 10;" text="Total" />
